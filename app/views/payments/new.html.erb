<!-- app/views/bookings/new.html.erb -->
<section>
  <div class='container mt-5 pt-5' >
    <div class='row' >
      <div class='col-12 col-sm-8 col-md-6 m-auto'>
        <div class='card border-0 shadow' >
          <div class='card-body'>

            <h1>New payment</h1>

            <%= form_for @payment do |f| %>

            <%= f.label :card_number, 'Card information' %>
            <%= f.number_field :card_number, class: "form-control my-3 py-2", placeholder: ' 1234 1234 1234 1234 '%>

            <%= f.label :expiration_date, 'expiration_date' %>
            <%= f.date_field :expiration_date,class: "form-control my-3 py-2"  %>

            <%= f.label :cvv %>
            <%= f.number_field :cvv,class: "form-control my-3 py-2",placeholder: "Enter Your Name" %>


            <%#= f.hidden_field :user_id, value: current_user.id %> <!-- Assuming you have a current_user method for authentication -->
            <%#= f.hidden_field :room_id, value: @room.id %>
            <%= f.hidden_field :booking_id, value: @booking.id %>

            <%= f.submit 'Book Now', class: 'btn btn-success' %>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>


    