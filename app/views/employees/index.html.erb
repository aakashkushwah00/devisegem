<div class="container">
  <div class="row">
    <%# <div class="col-md-8 col-xs-12"> %>
      <div class="table-responsive">

        <h1>Listing Employee</h1>
          <table class="table table-bordered table-hover table-dark table-striped">
            <thead>
              <tr>
              <th>Employee.id</th>
                <th>First_Name</th>
                <th>Last_Name</th>
                <th>Position</th>
                <th>Salary</th>
                <th colspan="3">Actions</th>
              </tr>
            </thead>

         <tbody>
              <% @employees.each do |employee| %>
                <tr>
                  <td><%= employee.id %></td>
                  <td><%= employee.first_name %></td>
                  <td><%= employee.last_name %></td>
                  <td><%= employee.position %></td>
                  <td><%= employee.salary %></td>
                 
              <td><%= link_to 'show', hotel_employee_path(@hotel, employee.id), class: 'btn btn-primary' %></td>
        
              <td>
          <%= link_to 'Edit', edit_hotel_employee_path(@hotel, employee), class: 'btn btn-primary'  %> 
        </td>

              <td><%= link_to "Delete Room", hotel_employee_path(@hotel, employee.id), class: 'btn btn-danger', data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                } %></td>
                </tr>
              <% end %>
            </tbody>


          </table>

          <%= link_to 'New Employee', new_hotel_employee_path, class: 'btn btn-primary' %>

      </div>
    </div>
  </div>
</div>

