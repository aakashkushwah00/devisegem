                <td><%= link_to "Show Room", '/hotels/3/rooms/2'%></td>
                <td><%= link_to "Edit Room", '/hotels/3/rooms/2'%></td>                
                <td><%= link_to "Delete Room", '/hotels/3/rooms/2'%></td>
                  
                  
                  
                            

                </tr>
              <% end %>
            </tbody>


          </table>

      <%= link_to 'New Room', new_hotel_room_path, class: 'btn btn-outline-primary' %>
      </div>
    </div>
  </div>
</div>

