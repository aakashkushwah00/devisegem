<div class="container">
  <div class="row">
    <%# <div class="col-md-8 col-xs-12"> %>
      <div class="table-responsive">

        <h1>Listing Hotels</h1>
          <table class="table table-bordered table-hover table-dark table-striped">
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Contact_Number</th>
                <th>Address</th>
                <th>Description</th>

                <th colspan="3">Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @hotels.each do |hotel| %>
                <tr>
                  <td><%= hotel.name %></td>
                  <td><%= hotel.email %></td>
                  <td><%= hotel.contact_number %></td>
                  <td><%= hotel.address %></td>
                  <td><%= hotel.description %></td>
                  <td><%= link_to "Show", hotel_path(hotel)%></td>
                  <td><%= link_to "Edit", edit_hotel_path(hotel) %></td>
                  <td><%= button_to "Destroy", hotel_path(hotel), method: :delete %>
                  </td>

                </tr>
              <% end %>
            </tbody>
          </table>

          <%= form_tag import_csv_hotels_path, multipart: true do %>
          <%= file_field_tag :file %>
          <%= submit_tag 'Import CSV' %>
        <% end %>
        
        <%= link_to "New hotel", new_hotel_path, class: 'btn btn-outline-primary'  %>

        <%= link_to "AllHotelPDF", hotels_path(format: :pdf), layouts: 'pdf' %>

      </div>
    </div>
  </div>
</div>

