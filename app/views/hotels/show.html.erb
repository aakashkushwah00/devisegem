
<div class="container mt-5">
  <div class="row">
    <div class="col-md-5 mb-5">
      <div class="card">
       
       <!--
        <%= image_tag 'blog1.jpg', class:'img-fiuld' %>
      -->

        <div class="card-body">
          <td> <%= image_tag @hotel.hotel_photo, class: 'img-fuild' %> </td>

          <h2 class="card-title"> Hotel_ID : <%= @hotel.id %></h2>
          <h4 class="card-title"> HotelName : <%= @hotel.name %></h4>

          <h6 class="card-text"> HotelDescription : <%= @hotel.description %> </h6>
          

          <%# <a href="#" class="btn btn-primary">Add Rooms</a> %>

          <%= link_to 'Add Rooms',hotel_rooms_path(@hotel), class: 'btn btn-outline-success' %>
